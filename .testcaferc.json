{
	"browsers": "chrome",
	"screenshots": {
		"path": "test-artifacts/screenshots",
		"pathPattern": "${DATE}_${TIME}/${TEST}.png",
		"takeOnFails": true
	},
	"videoPath": "test-artifacts/videos",
	"videoOptions": {
		"singleFile": false,
		"failedOnly": true,
		"pathPattern": "${DATE}_${TIME}/Video.mp4"
	},
	"concurrency": 1,
	"selectorTimeout": 3000,
	"assertionTimeout": 1000,
	"pageLoadTimeout": 1000,
	"reporter": [
		{
			"name": "list"
		},
		{
			"name": "allure"
		}
	]
}
